<header>
  <div class="logo-wrapper">
    <a class="logo nav" href="/" title="{{t 'header.homepageAria'}}">
      <img src="/images/logo.png" alt="kutt" width="18" height="24" />
      {{site_name}}
    </a>
    <ul class="logo-links">
      <li>
        <a class="nav" href="https://github.com/thedevs-network/kutt" target="_blank" rel="noopener noreferrer" title="GitHub">
          GitHub
        </a>
      </li>
      {{#if report_email}}
        <li>
          <a class="nav" href="/report" title="{{t 'header.reportAbuseAria'}}">
            {{t 'header.reportAbuse'}}
          </a>
        </li>
      {{/if}}
    </ul>
  </div>
  <nav>
    <ul>
      {{#unless user}}
        <li>
          <a class="button primary" href="/login" title="{{t 'header.loginOrSignupAria'}}">
            {{t 'header.loginOrSignup'}}
          </a>
        </li>
      {{/unless}}
      {{#if user}}
        <li>
          <a class="button primary" href="/settings" title="{{t 'header.settingsAria'}}">
            <span>{{> icons/cog}}</span>
            {{t 'header.settings'}}
          </a>
        </li>
        {{#if isAdmin}}
          <li>
            <a class="button secondary" href="/admin" title="{{t 'header.adminAria'}}">
              <span>{{> icons/shield}}</span>
              {{t 'header.admin'}}
            </a>
          </li>
        {{/if}}
        <li>
          <a class="nav" href="/logout" title="{{t 'header.logout'}}">
            {{t 'header.logout'}}
          </a>
        </li>
      {{/if}}
    </ul>
  </nav>
</header>
