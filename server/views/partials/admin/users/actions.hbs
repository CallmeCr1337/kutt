<td class="actions users-actions">
  {{#if banned}}
  <button 
    class="action unban" 
    hx-on:click='openDialog("admin-table-dialog")' 
    hx-get="/confirm-user-unban?id={{id}}" 
    hx-target="#admin-table-dialog .content-wrapper" 
    hx-indicator="#admin-table-dialog"
    title="Unban User">
    {{> icons/stop}}
  </button>
  {{else}}
  <button 
    class="action ban" 
    hx-on:click='openDialog("admin-table-dialog")' 
    hx-get="/confirm-user-ban?id={{id}}" 
    hx-target="#admin-table-dialog .content-wrapper" 
    hx-indicator="#admin-table-dialog"
    title="Ban User">
    {{> icons/stop}}
  </button>
  {{/if}}
  <button 
    class="action delete" 
    hx-on:click='openDialog("admin-table-dialog")' 
    hx-get="/confirm-user-delete" 
    hx-target="#admin-table-dialog .content-wrapper" 
    hx-indicator="#admin-table-dialog" 
    hx-vals='{"id":"{{id}}"}'
  >
    {{> icons/trash}}
  </button>
</td>