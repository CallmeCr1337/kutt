{{#unless links}}
  {{#ifEquals links.length 0}}
    <tr class="no-data">
      <td>
        {{t "table.noLinks"}}
      </td>
    </tr>
  {{else}}
    <tr class="loading-placeholder">
      <td>
        {{> icons/spinner}}
        {{t "table.loadingLinks"}}
      </td>
    </tr>
  {{/ifEquals}}
{{/unless}}